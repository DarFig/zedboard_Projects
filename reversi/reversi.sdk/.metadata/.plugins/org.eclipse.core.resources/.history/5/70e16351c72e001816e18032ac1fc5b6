#include "matriz_celda.h"
#include "xil_types.h"
#include <stdio.h>



void pintarTablero(u32 *tablero){
	int i = 0;
	for(i = 0; i < 4; i++){
		print("%i", tablero[i] & 0xc0000000);
		print("%i", tablero[i] & 0x30000000);
		print("%i", tablero[i] & 0x0c000000);
		print("%i", tablero[i] & 0x03000000);
		print("%i", tablero[i] & 0x00c00000);
		print("%i", tablero[i] & 0x00300000);
		print("%i", tablero[i] & 0x000c0000);
		print("%i\n", tablero[i]&0x00030000);
		print("%i", tablero[i] & 0x0000c000);
		print("%i", tablero[i] & 0x00003000);
		print("%i", tablero[i] & 0x00000c00);
		print("%i", tablero[i] & 0x00000300);
		print("%i", tablero[i] & 0x000000c0);
		print("%i", tablero[i] & 0x00000030);
		print("%i", tablero[i] & 0x0000000c);
		print("%i\n", tablero[i] & 0x00000003);

	}
}

int main(){


   // tablero
   // 0 - nada
   // 1 - blanco
   // 2 - negro
   // movimientos
   // 0 - 2 idem
   // 3 posible movimiento

	u32 tablero[4] = {0x00000000,
					  0x01800000,
					  0x06000000,
					  0x00000000};
	pintarTablero(tablero);

	return 0;
}
